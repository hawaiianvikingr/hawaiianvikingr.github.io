<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="roller">
    <Require feature="rpc"/>
    <Require feature="views"/>
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
      <script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
      
      <html>
      
      <style type="text/css">
      
          #header {
            background-color: dark grey;
            height: 50px;
            font-family: monospace;
            font-color: light grey;
            font-size: 40px;
            
          }
          
          #controls {
            background-color: grey;
            height: 200px;
          }
          
          #log {
            background-color: #eeeeee;
            height:300px;
          }
          
          .button{
            background-color: light blue;
            height: 30px;
            width: 30px;
            font-family: sans-serif;
            font-size: 18px;
            margin: 5px;
            border-radius: 5px;
            border: 2px solid black;
            display: inline-block;
          }
          
          .entry {
            height: 50px;
            background-color: white;
            font-family: sans-serif;
            border: 2px solid grey;
          }
      
      </style>
      
      <body>
      
        //Contains title info for the extension
        <div id="header">
            roller
        </div>
        
        //Contains the buttons and controls
        <div id="controls">
            <h3>Controls</h3>
            
            <h3>Header</h3>
            
            <div class="heading">Alias</div>
            <input class="textBox" id="alias" maxLength="50" name="alias" placeholder="Alias">
            
            <div class="button">
                -2
            </div>
            
            <div class="button">
                -1
            </div>
            
            <div class="button">
                +0
            </div>
            
            <div class="button">
                +1
            </div>
            
            <input class="button" id="plus2" name="plus2" title="+2" type="submit" value="+2">
            
        </div>
        
        //Displays roll results and chat log?
        <div id="log">
            <h3>Log</h3>
        </div>
      
        <script language="javascript" type="text/javascript">
        
        //Wait for the gadget to load
        gadgets.util.registerOnLoadHandler(init);
        
        // Function to initialize the extension
        function init () {
        
        }
        
        </script>
      
      </body>
      
      </html>
    ]]>
  </Content>
</Module>